<%- include('./partials/header') -%>

<div class="container mt-3">
  <h2 class="text-center mb-4 font-weight-bold" style="color:rgb(122,24,42);font-family:cursive">Add a New Event </h2>
    <form method="POST" action="/new/addEvent">
        <div class="form-group">
            <label for="name">Name of event: </label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
          <label for="sDate">Start Date: </label>
          <input type="date" class="form-control" id="sDate" name="startDate">
        </div>
        <div class="form-group">
          <label for="eDate">End Date: </label>
          <input type="date" class="form-control" id="eDate" name="endDate">
        </div>
        <div class="form-group">
          <label for="desc">Description:  </label>
          <input type="text" class="form-control" id="desc" name="description">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

</div>


<%- include('./partials/footer') -%>