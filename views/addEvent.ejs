<%- include('./partials/header') -%>

<body style="background-image: url('/public/images/bg.jpeg');opacity:0.9">
<div class="container mt-3">
  <div class="offset-1 col-10 col-md-6 offset-md-3 align-self-center">
    <h2 class="text-center mb-4 font-weight-bold" style="color:rgb(122,24,42);font-family:cursive">Add a New Event </h2>
    <form method="POST" action="/new/addEvent">
        <div class="form-group">
            <label for="name" class="font-weight-bold">Name of event: </label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
          <label for="sDate" class="font-weight-bold">Start Date: </label>
          <input type="date" class="form-control" id="sDate" name="startDate">
        </div>
        <div class="form-group">
          <label for="eDate" class="font-weight-bold">End Date: </label>
          <input type="date" class="form-control" id="eDate" name="endDate">
        </div>
        <div class="form-group">
          <label for="desc" class="font-weight-bold">Description:  </label>
          <input type="text" class="form-control" id="desc" name="description">
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
      </form>
  </div>
</div>

</body>
<%- include('./partials/footer') -%>