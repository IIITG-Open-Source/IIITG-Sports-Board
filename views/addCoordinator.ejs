<%- include('./partials/header') -%>
<body style="background-image: url('/public/images/bg.jpeg');opacity:0.9">
<div class="container mt-4">
  <div class="offset-1 col-10 col-md-6 offset-md-3">
    <h2 class="text-center mb-5 font-weight-bold" style="color:rgb(122,24,42);font-family:cursive">New Coordinator </h2>
    <form method="POST" action="/add/addCoordinator" enctype="multipart/form-data">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label font-weight-bold">NAME: </label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name">
            </div>
          </div>
        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label font-weight-bold">EMAIL: </label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email">
          </div>
        </div>
        <div class="form-group row">
          <label for="batch" class="col-sm-2 col-form-label font-weight-bold">BATCH: </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="batch" placeholder="YYYY" name="batch">
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <legend class="col-form-label col-sm-4 pt-0 font-weight-bold">AREA: </legend>
            <div class="col-sm-8">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="area" id="radio1" value="Indoor">
                <label class="form-check-label" for="radio1">Indoor</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="area" id="radio2" value="Outdoor">
                <label class="form-check-label" for="radio2">Outdoor</label>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-4 pt-0 font-weight-bold">DESIGNATION: </legend>
              <div class="col-sm-8">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="designation" id="radio3" value="Student">
                  <label class="form-check-label" for="radio3">Student</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="designation" id="radio4" value="Faculty">
                  <label class="form-check-label" for="radio4">Faculty</label>
                </div>
              </div>
            </div>
        </div>
        <div class="form-group row">
          <label for="img" class="col-sm-2 col-form-label font-weight-bold">IMAGE: </label>
          <div class="col-sm-10">
            <input type="file" id="img" name="image">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10 text-center">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Register</button>
          </div>
        </div>
      </form>
  </div>
</div>
</body>
<%- include('./partials/footer') -%>