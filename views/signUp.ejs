<%- include('./partials/header') -%>

<body style="background-image: url('/public/images/bg.jpeg');opacity:0.9">
    <div class="container mt-3">
      <div class="offset-1 col-10 col-md-6 offset-md-3 align-self-center">
        <h2 class="text-center mb-4 font-weight-bold" style="color:rgb(122,24,42);font-family:cursive">Sign Up </h2>
        <form method="POST" action="/auth/signUp">
            <div class="form-group">
                <label for="name" class="font-weight-bold">Name: </label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="email" class="font-weight-bold">Email Address: </label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            
            <div class="form-group">
              <label for="pwd" class="font-weight-bold">Password:  </label>
              <input type="password" class="form-control" id="pwd" name="password">
            </div>
            <div class="form-group">
                <div class="row">
                  <legend class="col-form-label col-sm-4 pt-0 font-weight-bold">Role: </legend>
                  <div class="col-sm-8">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="designation" id="radio3" value="Student">
                      <label class="form-check-label" for="radio3">Student</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="designation" id="radio4" value="Faculty">
                      <label class="form-check-label" for="radio4">Faculty</label>
                    </div>
                  </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
            </div>
            <div>
                <p>Already Registered. <a class="text-danger" href="/auth/login">Sign In</a> here</p>
            </div>
          </form>
      </div>
    </div>
    
    </body>

<%- include('./partials/footer') -%>